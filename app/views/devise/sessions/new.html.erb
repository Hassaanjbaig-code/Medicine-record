<div class="container h-100">
  <div class="d-flex justify-content-center flex-column align-items-center">
    <h2>Log in</h2>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <!-- Email input -->
      <div data-mdb-input-init class="form-outline mb-4">
        <%= f.label :email, class: "form-label", for: "form1Example1" %>
        <%= f.email_field :email, id: "form1Example1", class: "form-control", autofocus: true, autocomplete: "email" %>
      </div>
      <!-- Password input -->
      <div data-mdb-input-init class="form-outline mb-4">
        <%= f.label :password, class: "form-label", for: "form1Example2" %>
        <%= f.password_field :password, id: "form1Example2", class: "form-control", autocomplete: "current-password" %>
      </div>
      <% if devise_mapping.rememberable? %>
        <!-- 2 column grid layout for inline styling -->
        <div class="row mb-4">
          <div class="col d-flex justify-content-center">
            <!-- Checkbox -->
            <div class="form-check">
              <%= f.check_box :remember_me, id: "form1Example3", class: "form-check-input" %>
              <%= f.label :remember_me, class: "form-check-label max-content-width", for: "form1Example3", style: "width: max-content;" %>
            </div>
          </div>
          <div class="col">
            <!-- Simple link -->
            <a href="<%= new_password_path(resource_name) %>">Forgot password?</a>
          </div>
        </div>
      <% end %>
      <!-- Submit button -->
      <%= f.submit "Log in", class: "btn btn-primary btn-block", data: { mdb_ripple_init: true } %>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>